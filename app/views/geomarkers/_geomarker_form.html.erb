<%= form_for @geomarker do |f| %>
  <% if @geomarker.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @geomarker.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :latitude %>
  <%= f.number_field :latitude, {in: -90..90, step: 0.01} %>
  <%= f.label :longitude %>
  <%= f.number_field :longitude, {in: -180..180, step: 0.01} %>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>
  
  <br>
  <%= f.submit "Mark it!", :class => "button" %>
<% end %>