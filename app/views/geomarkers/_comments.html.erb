<% @geomarker.comments.reverse.each do |comment| %>
  <% if comment.user != nil %>
    <hr>
    <div class="comment-wrapper">
      <p><b><%= comment.content %></b></p>
      <p>Posted by: <em><%= comment.user.username %></em></p>
      <p><em><%= comment.created_at.to_s(:long) %></em></p>
    </div>
  <% end %>
<% end %>