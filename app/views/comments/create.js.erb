<% if @comment.errors.any? %>
  $("#comment-form-errors").html("<%= j render 'geomarkers/comment_form_errors' %>");
<% else %>
  if ($("#comment-header").text().search("Be the first") != -1){
    $("#comment-header").text("What people've been saying:");
  }
  $("#comment-form-errors").html("");
  $('#comment-display').prepend("<%= j render 'geomarkers/comment' %>");
  $('#new_comment')[0].reset();
<% end %>