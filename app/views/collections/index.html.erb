<h1>Your Collections</h1>
<br>
<%= link_to "Start a collection", new_user_collection_path(@user) %>
<br>
<%= link_to "New Marker", new_geomarker_path %>
<% @collections.each do |collection| %>
  <p><%= link_to collection.name, user_collection_path(collection.user_id, collection.id) %></p>
  <p>Tags: <% collection.tags.each do |tag| %>
    <span><%= link_to tag.name, geomarkers_path(:tag => tag.name) %></span>
  <% end %></p>
  <p><%= collection.description %></p>
  <hr>
<% end %>