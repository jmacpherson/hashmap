<h1>Create a collection!</h1>
<br>
<%= form_for @collection, url: user_collections_path(current_user.id) do |f| %>
  <% if @collection.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @collection.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>
  <%= f.submit "Submit", :class => "button" %>
<% end %>