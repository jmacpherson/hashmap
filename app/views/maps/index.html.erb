<div id="map"></div> 
<div class="map-wrapper">
  
  <div class="map-overlay">
    <a href="#right-menu"><i class="open-menu fi-list"></i></a>
  </div>
</div>

<nav id="right-menu">

  <ul>
    <% @collections.each do |collection| %>
      <li>
        <span><i class="fi-eye"></i><a href="#" class="collection-item"></a><%= collection.name %></span>
        
        <ul>
          <% collection.tag_list.each do |tag| %>
          <li><span><i class="fi-eye"></i></span><a href="#"><%= tag %></a></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</nav>




