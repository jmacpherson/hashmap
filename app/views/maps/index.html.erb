<div id="map">
  <a href="#right-menu"><i class="open-menu fi-list"></i></a>
  <input type="button" id="newMarkerButton" class="small button" value="point and click"/>
</div> 

<nav id="right-menu">

  <ul>
    <% @collections.each do |collection| %>
      <li data-collection="<%= collection.name %>" data-show="disabled">
        <a><i class="collection-eye fa fa-eye-slash" ></i><span><%= collection.name %></span></a>
        <ul>
          <% collection.collectionTags.each do |tag| %>
          <li data-tag="<%= tag.name %>" data-show="disabled"><a><i class="tag-eye fa fa-eye-slash"></i><span><%= tag.name %></span></a></li>
          <% end %>
        </ul>
      </li>
    <% end %>
    <li id="collection-form">
      <span>
        <div>
          <%= render "collection_form" %>
        </div>
      </span>
    </li>
    <li id="new-collection">
      <a><span>Add a new collection!</span></a>
    </li>
    
  </ul>
</nav>

