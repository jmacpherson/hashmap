<div class="container">
  <div class="row">
    <div class="banner">
      <div id="logo">#</div><p><span id="hash">hash</span><span id="mapp">mapp</span></p>
    </div>
  </div>
  <div class="row">
    <div class="signin-form">
      <%= form_tag sessions_path do %>
        <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
        <div class="field">
          <%= text_field_tag :username, params[:username], placeholder: "Username", class: "signin-field" %>
        </div>
        <div class="field">
          <%= password_field_tag :password, nil, placeholder: "Password", class: "signin-field" %>
        </div>
        <div class="field">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me,  nil, class: "field-label" %>
        </div>
        <div class="actions"><%= submit_tag "Sign in", class: "button small round" %></div>
      <% end %>
    </div>
  </div>
</div>